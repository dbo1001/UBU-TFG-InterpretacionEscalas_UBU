<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TFG_InterpretacionEscalas_UBU">
		<class>model.Alumno</class>
		<class>model.Areafuncional</class>
		<class>model.Aula</class>
		<class>model.AulaProfesor</class>
		<class>model.AulaProfesorPK</class>
		<class>model.Categorizacion</class>
		<class>model.Evaluacion</class>
		<class>model.Item</class>
		<class>model.Profesor</class>
		<class>model.Puntuacion</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL81Dialect"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres"/>
			<property name="hibernate.default_schema" value="postgres"/>
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="pgp"/>
			<property name="hibernate.connection.autocommit" value="false"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
			
			<!-- <property name="hibernate.connection.provider_class" value="org.hibernate.c3p0.internal.C3P0ConnectionProvider"/> -->
			<!-- <property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/> -->
			<property name="hibernate.c3p0.min_size" value="5"/>
			<property name="hibernate.c3p0.max_size" value="20"/>
			<property name="hibernate.c3p0.timeout" value="300"/>
			<property name="hibernate.c3p0.max_statements" value="50"/>
			<property name="hibernate.c3p0.idle_test_period" value="3000"/>
		</properties>
	</persistence-unit>
</persistence>

