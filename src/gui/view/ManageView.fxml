<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.view.ManageViewController">
   <tabs>
      <Tab closable="false" text="Alumnos">
         <content>
            <BorderPane>
               <top>
                  <Button mnemonicParsing="false" onAction="#addNewStudent" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" text="Agregar nuevo alumno" BorderPane.alignment="CENTER_LEFT">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </top>
               <center>
                  <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="nameColumn" minWidth="100.0" prefWidth="-1.0" text="Nombre" />
                      <TableColumn fx:id="surname1Column" minWidth="100.0" prefWidth="-1.0" text="Primer apellido" />
                        <TableColumn fx:id="surname2Column" minWidth="125.0" prefWidth="-1.0" text="Segundo apellido" />
                        <TableColumn fx:id="editColumn" minWidth="50.0" prefWidth="-1.0" sortable="false" />
                        <TableColumn fx:id="deleteColumn" minWidth="50.0" prefWidth="-1.0" sortable="false" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
         </content>
      </Tab>
      <Tab closable="false" text="Profesores">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>
      <Tab closable="false" text="Aulas">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>
   </tabs>
</TabPane>
