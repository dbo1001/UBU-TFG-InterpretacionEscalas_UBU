<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../../gui.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.view.evaluation.EvaluationViewController">
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <AnchorPane BorderPane.alignment="BOTTOM_LEFT">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="40.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" prefWidth="231.0" styleClass="bigText" text="Terminar y guardar" />
               </children>
            </HBox>
            <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="50.0" AnchorPane.rightAnchor="0.0">
               <children>
                <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#next" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" prefWidth="100.0" styleClass="bigText" text="Siguiente" />
                  <Button mnemonicParsing="false" onAction="#previous" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" styleClass="bigText" text="Anterior" />
                  <Button maxWidth="100.0" mnemonicParsing="false" onAction="#cancel" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" styleClass="bigText" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
