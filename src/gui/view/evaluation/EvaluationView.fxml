<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../../gui.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.view.evaluation.EvaluationViewController">
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <ButtonBar maxHeight="-Infinity" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="BOTTOM_LEFT">
        <buttons>
          <Button mnemonicParsing="false" onAction="#cancel" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" styleClass="bigText" text="Cancelar" />
            <HBox prefWidth="50.0" />
            <Button mnemonicParsing="false" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" styleClass="bigText" text="Guardar" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="20.0" left="400.0" top="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
