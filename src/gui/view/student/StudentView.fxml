<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../../gui.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.view.student.StudentViewController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Introduce los datos del nuevo alumno:" BorderPane.alignment="TOP_CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <center>
      <GridPane alignment="TOP_CENTER" hgap="100.0" vgap="20.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="30.0" vgrow="SOMETIMES" />
