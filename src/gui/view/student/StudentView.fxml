<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.view.student.StudentViewController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Introduce los datos del nuevo alumno:" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font size="36.0" />
