                  <TextArea maxHeight="70.0" maxWidth="300.0" wrapText="true" />
               </children>
            </TextFlow>
         </children>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </GridPane>
