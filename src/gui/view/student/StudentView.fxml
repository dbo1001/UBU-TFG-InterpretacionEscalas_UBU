            <TextField prefWidth="200.0" promptText="Dirección" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <ChoiceBox fx:id="aulaCB" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         </children>
         <BorderPane.margin>
            <Insets left="70.0" top="30.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="TOP_CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#cancel" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" text="Cancelar">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <HBox prefWidth="50.0" />
            <Button mnemonicParsing="false" onAction="#acept" onMouseEntered="#handCursor" onMouseExited="#defaultCursor" text="Aceptar">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
        </buttons>
         <BorderPane.margin>
            <Insets bottom="20.0" left="400.0" top="10.0" />
         </BorderPane.margin>
      </ButtonBar>
