            <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Primer apellido" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Segundo apellido" GridPane.rowIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NIF" GridPane.rowIndex="3">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fecha de nacimiento" GridPane.rowIndex="4">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dirección" GridPane.rowIndex="5">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Aula" GridPane.rowIndex="6">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <TextField maxWidth="300.0" prefWidth="200.0" promptText="Nombre" GridPane.columnIndex="1" />
            <TextField prefWidth="200.0" promptText="Primer apellido" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField prefWidth="200.0" promptText="Segundo apellido" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField prefWidth="200.0" promptText="NIF" GridPane.columnIndex="1" GridPane.rowIndex="3" />
