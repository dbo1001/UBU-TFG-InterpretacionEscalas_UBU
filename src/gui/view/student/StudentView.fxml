            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subTitle" text="NIF" GridPane.rowIndex="3">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subTitle" text="Fecha de nacimiento" GridPane.rowIndex="4">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subTitle" text="Dirección" GridPane.rowIndex="5">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subTitle" text="Aula" GridPane.rowIndex="6">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subTitle" text="Descripción (opcional)" GridPane.rowIndex="7" />
            <TextField maxWidth="200.0" prefWidth="200.0" promptText="Nombre" GridPane.columnIndex="1" />
            <TextField maxWidth="200.0" prefWidth="200.0" promptText="Primer apellido" GridPane.columnIndex="1" GridPane.rowIndex="1" />
